{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/node",
      "@types/webpack",
      "@nuxt/types",
      "vuetify",
      "@types/jest"
    ],
    "experimentalDecorators": true
  },
  "files": [
    "shims-vue.d.ts",
    "nuxt.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
